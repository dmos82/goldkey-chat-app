{
  "name": "@gkchatty/api",
  "version": "0.1.0",
  "private": true,
  "description": "API server for GKChatty",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts,json --exec ts-node --transpile-only src/index.ts",
    "build": "tsup src/index.ts --format cjs --dts --clean --external pdf-parse --external pdfjs-dist",
    "start": "node --preserve-symlinks dist/index.js",
    "load-kb": "ts-node src/scripts/loadSystemKnowledge.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test:openai": "ts-node src/test-openai.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.7.1",
  "dependencies": {
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^20.11.0",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^3.0.2",
    "chromadb": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.93.0",
    "pdfjs-dist": "^4.8.69",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.17.30",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "nodemon": "^3.1.9",
    "pdf-parse": "^1.1.1",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.3",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.14.0"
  }
}
